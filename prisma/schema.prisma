generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String              @id @default(cuid())
  email             String              @unique
  password          String
  username          String              @unique
  displayName       String
  bio               String?
  profileImage      String?
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  initialCapital    Decimal             @default(10000000) @db.Decimal(20, 2)
  league            League              @default(ROOKIE)
  leagueUpdatedAt   DateTime            @default(now())
  referralCode      String              @unique @default(cuid())
  referredBy        String?
  aiAnalyses        AIAnalysis[]
  capitalHistory    CapitalHistory[]
  comments          Comment[]
  followers         Follow[]            @relation("UserFollowers")
  following         Follow[]            @relation("UserFollowing")
  likes             Like[]
  portfolioAnalyses PortfolioAnalysis[]
  portfolio         Portfolio?
  posts             Post[]
  rankings          Ranking[]
  transactions      Transaction[]
  referrer          User?               @relation("Referrals", fields: [referredBy], references: [referralCode])
  referrals         User[]              @relation("Referrals")

  @@map("users")
}

model Portfolio {
  id                 String              @id @default(cuid())
  userId             String              @unique
  initialCapital     Float               @default(10000000)
  currentCash        Float               @default(10000000)
  totalAssets        Float               @default(10000000)
  totalReturn        Float               @default(0)
  realizedPL         Float               @default(0)
  unrealizedPL       Float               @default(0)
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  monthlyStartAssets Float               @default(10000000)
  weeklyStartAssets  Float               @default(10000000)
  holdings           Holding[]
  snapshots          PortfolioSnapshot[]
  user               User                @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("portfolios")
}

model Holding {
  id           String    @id @default(cuid())
  portfolioId  String
  stockCode    String
  stockName    String
  quantity     Int
  avgPrice     Float
  currentPrice Float
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  portfolio    Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)

  @@unique([portfolioId, stockCode])
  @@map("holdings")
}

model Transaction {
  id          String          @id @default(cuid())
  userId      String
  type        TransactionType
  stockCode   String
  stockName   String
  quantity    Int
  price       Float
  totalAmount Float
  fee         Float           @default(0)
  note        String?
  createdAt   DateTime        @default(now())
  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  linkedPosts Post[]          @relation("LinkedTransactions")

  @@map("transactions")
}

model Post {
  id                   String        @id @default(cuid())
  userId               String
  title                String
  content              String
  imageUrls            String[]      @default([])
  isVerified           Boolean       @default(false)
  linkedTransactionIds String[]      @default([])
  likeCount            Int           @default(0)
  commentCount         Int           @default(0)
  viewCount            Int           @default(0)
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt
  returnRate           Float?
  stockCode            String?
  stockName            String?
  comments             Comment[]
  likes                Like[]
  user                 User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  linkedTransactions   Transaction[] @relation("LinkedTransactions")

  @@map("posts")
}

model Comment {
  id        String   @id @default(cuid())
  postId    String
  userId    String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("comments")
}

model Like {
  id        String   @id @default(cuid())
  postId    String
  userId    String
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([postId, userId])
  @@map("likes")
}

model Follow {
  id          String   @id @default(cuid())
  followerId  String
  followingId String
  createdAt   DateTime @default(now())
  follower    User     @relation("UserFollowers", fields: [followerId], references: [id], onDelete: Cascade)
  following   User     @relation("UserFollowing", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@map("follows")
}

model Ranking {
  id             String        @id @default(cuid())
  userId         String
  rank           Int
  totalReturn    Float
  period         RankingPeriod
  updatedAt      DateTime      @updatedAt
  league         League        @default(ROOKIE)
  rewardAmount   Decimal?      @db.Decimal(20, 2)
  rewardEligible Boolean       @default(false)
  rewardGiven    Boolean       @default(false)
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, period, league])
  @@index([period, league, rank])
  @@map("rankings")
}

model Stock {
  id             String              @id @default(cuid())
  stockCode      String              @unique
  stockName      String
  market         String
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
  currentPrice   Float               @default(0)
  highPrice      Float               @default(0)
  lowPrice       Float               @default(0)
  openPrice      Float               @default(0)
  priceUpdatedAt DateTime?
  volume         BigInt              @default(0)
  priceHistory   StockPriceHistory[]

  @@index([stockName])
  @@index([stockCode])
  @@map("stocks")
}

model StockPriceHistory {
  id         String   @id @default(cuid())
  stockCode  String
  openPrice  Float
  highPrice  Float
  lowPrice   Float
  closePrice Float
  volume     BigInt
  date       DateTime @db.Date
  createdAt  DateTime @default(now())
  stock      Stock    @relation(fields: [stockCode], references: [stockCode], onDelete: Cascade)

  @@unique([stockCode, date])
  @@index([stockCode, date])
  @@map("stock_price_history")
}

model PortfolioSnapshot {
  id                String              @id @default(cuid())
  portfolioId       String
  date              DateTime            @db.Date
  totalAssets       Float
  totalReturn       Float
  currentCash       Float
  createdAt         DateTime            @default(now())
  portfolioAnalyses PortfolioAnalysis[]
  portfolio         Portfolio           @relation(fields: [portfolioId], references: [id], onDelete: Cascade)

  @@unique([portfolioId, date])
  @@index([portfolioId, date(sort: Desc)])
  @@map("portfolio_snapshots")
}

model AIAnalysis {
  id           String   @id @default(cuid())
  userId       String
  analysisType String
  response     String
  summary      String
  tokensUsed   Int
  cost         Float
  model        String   @default("gpt-5-nano")
  analysisDate DateTime @db.Date
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, analysisDate])
  @@index([userId, analysisDate(sort: Desc)])
  @@index([analysisType])
  @@map("ai_analyses")
}

model MarketAnalysis {
  id         String   @id @default(cuid())
  date       DateTime @unique @db.Date
  marketData Json
  analysis   String
  summary    String
  tokensUsed Int
  cost       Float
  model      String   @default("gpt-5-nano")
  createdAt  DateTime @default(now())

  @@index([date(sort: Desc)])
  @@map("market_analyses")
}

model PortfolioAnalysis {
  id              String             @id @default(cuid())
  userId          String
  date            DateTime           @db.Date
  snapshotId      String?
  metrics         Json
  summary         String
  analysis        String
  hasTransactions Boolean            @default(false)
  transactionIds  Json?
  tokensUsed      Int
  cost            Float
  model           String             @default("gpt-5-nano")
  createdAt       DateTime           @default(now())
  snapshot        PortfolioSnapshot? @relation(fields: [snapshotId], references: [id])
  user            User               @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId, date(sort: Desc)])
  @@index([date])
  @@map("portfolio_analyses")
}

model CapitalHistory {
  id          String              @id @default(cuid())
  userId      String
  amount      Decimal             @db.Decimal(20, 2)
  newTotal    Decimal             @db.Decimal(20, 2)
  reason      CapitalChangeReason
  description String?
  rewardType  RewardType?
  rewardRank  Int?
  period      String?
  league      League?
  createdAt   DateTime            @default(now())
  user        User                @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt(sort: Desc)])
  @@map("capital_history")
}

enum TransactionType {
  BUY
  SELL
}

enum RankingPeriod {
  WEEKLY
  MONTHLY
  ALL_TIME
}

enum League {
  ROOKIE
  HALL_OF_FAME
}

enum CapitalChangeReason {
  INITIAL
  REFERRAL_GIVEN
  REFERRAL_USED
  ROOKIE_REWARD
  HALL_REWARD
  ADMIN_ADJUST
}

enum RewardType {
  ROOKIE_TOP10
  ROOKIE_TOP100
  HALL_TOP100
}
